rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // 1. PUBLIC READ: Anyone can VIEW cards (Required for your business card link to work)
      allow read: if true;
      
      // 2. RESTRICTED WRITE: Only Authenticated Admins can EDIT/UPDATE data
      // This prevents public users from changing your data
      allow write: if request.auth != null;
    }
  }
}
